        android:id="@+id/addresscard"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"


        android:layout_height="wrap_content">

        <LinearLayout
