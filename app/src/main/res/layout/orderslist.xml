<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/secondCard"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/img_myorder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/onion"
            />

        <RelativeLayout
            android:id="@+id/relativeLytVideo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:background="@color/colorAccent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLytFilePath"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="visible"

            >

            <ImageView
                android:id="@+id/pdf_img"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/doc_img"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:visibility="gone"
                android:id="@+id/excel_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/txtNoAttach"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:gravity="center"/>
<LinearLayout
    android:id="@+id/pre_book_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_toRightOf="@+id/img_myorder"
    android:weightSum="10">
        <TextView
            android:layout_marginRight="30dp"
            android:id="@+id/preorder_myorder"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:text="PREORDER"/>
    <TextView
        android:layout_marginRight="30dp"
        android:id="@+id/preorder_date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:text="PREORDER"/>
</LinearLayout>
        <TextView
            android:layout_marginRight="30dp"
            android:id="@+id/Title_myorder"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/pre_book_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/img_myorder"
            android:textSize="15sp"
            android:text="Title"/>
        <TextView
            android:id="@+id/qty_myorder"
            android:layout_below="@+id/Title_myorder"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_myorder"
            android:textSize="15sp"
            android:text="QUANTITY:1KG"
            />

        <TextView
            android:id="@+id/count_myorder"
            android:layout_below="@+id/qty_myorder"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_myorder"
            android:text="count :"
            />
        <TextView
            android:id="@+id/prce_myorder"
            android:layout_below="@+id/count_myorder"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_myorder"
            android:text="RS:250.00"
            />
        <TextView
            android:id="@+id/pay_type_text"
            android:layout_below="@+id/prce_myorder"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_myorder"
            android:text="Cash On Delivery"
            />

        <TextView
            android:id="@+id/status_myorder"
            android:layout_below="@+id/pay_type_text"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPLETED"
            android:fontFamily="@font/roboto_medium"
            android:layout_toRightOf="@+id/img_myorder"
            android:layout_toEndOf="@+id/img_myorder" />
        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_myorder"
            android:layout_marginTop="30dp"
            android:text="**Price may vary according to the delivery charge/Coupon applied as shown during checkout"
            android:textColor="@color/black"
            android:textSize="12sp"/>

<Button
    android:id="@+id/return_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:textColor="@color/white"
    android:layout_below="@+id/note"
    android:layout_marginTop="20dp"
    android:text="RETURN"/>

        <RelativeLayout
            android:id="@+id/priceadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prce"
            android:layout_toRightOf="@+id/img_myorder"

            >


        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
