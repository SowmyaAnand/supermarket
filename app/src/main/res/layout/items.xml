<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    android:id="@+id/secondCard"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="100dp"
            android:layout_height="100dp"

            />

        <RelativeLayout
            android:id="@+id/relativeLytVideo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorAccent"

            android:visibility="gone">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLytFilePath"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="visible"

            >

            <ImageView
                android:id="@+id/pdf_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/doc_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/excel_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/txtNoAttach"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"

            android:visibility="gone" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/img_item"
            android:text="Title"

            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/publishNme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_item"
            android:text="QUANTITY:1kg"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/prce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/publishNme"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_item"
            android:text="RS:250.00"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/offerdescrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prce"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_item"
            android:text="RS:250.00"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/unread_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="8% Off"
            android:textColor="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/priceadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offerdescrp"
            android:layout_toRightOf="@+id/img"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:gravity="end">

                <Button
                    android:id="@+id/plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:background="@color/colorPrimary"
                    android:text="+"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/plus"
                    android:gravity="center"
                    android:text="1"

                    android:textColor="@color/black"

                    />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/quantity"

                    android:background="@color/colorPrimary"
                    android:text="-"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <Button
                android:id="@+id/add"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"

                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"

                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary"
                android:text="ADD" />
            <Button
                android:id="@+id/preoder_btn"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"

                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"

                android:layout_marginRight="10dp"
                android:background="@color/colorPrimary"
                android:text="PREORDER" />

        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>